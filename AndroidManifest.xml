<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="azzam.imad.demo"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="16" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="azzam.imad.demo.MainActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name"
            android:theme="@style/AppTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="azzam.imad.demo.BasicControlsActivity"
            android:label="@string/title_activity_basic_controls"
            android:parentActivityName="azzam.imad.demo.MainActivity"
            android:screenOrientation="landscape" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="azzam.imad.demo.MainActivity" />
        </activity>
        <activity
            android:name="azzam.imad.demo.SharedPreferencesActivity"
            android:label="@string/title_activity_shared_preferences"
            android:parentActivityName="azzam.imad.demo.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="azzam.imad.demo.MainActivity" />
        </activity>
        <activity
            android:name="azzam.imad.demo.ActionBarActivity"
            android:label="@string/title_activity_action_bar"
            android:parentActivityName="azzam.imad.demo.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="azzam.imad.demo.MainActivity" />
        </activity>
        <activity
            android:name="azzam.imad.demo.AudioActivity"
            android:label="@string/title_activity_audio"
            android:parentActivityName="azzam.imad.demo.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="azzam.imad.demo.MainActivity" />
        </activity>
        <activity
            android:name="azzam.imad.demo.GridViewActivity"
            android:label="@string/title_activity_grid_view"
            android:parentActivityName="azzam.imad.demo.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="azzam.imad.demo.MainActivity" />
        </activity>
        <activity
            android:name="azzam.imad.demo.AnimationActivity"
            android:label="@string/title_activity_animation"
            android:parentActivityName="azzam.imad.demo.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="azzam.imad.demo.MainActivity" />
        </activity>
    </application>

</manifest>
